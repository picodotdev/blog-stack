    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="org.h2.Driver" />
        <property name="url" value="jdbc:h2:misc/database/app" />
        <property name="username" value="sa" />
        <property name="password" value="sa" />
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="packagesToScan" value="info.blogstack.entities" />
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.H2Dialect</prop>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
                <prop key="hibernate.generate_statistics">false</prop>                
                <prop key="hibernate.show_sql">false</prop>                
            </props>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <context:annotation-config />
    <tx:annotation-driven transaction-manager="transactionManager" />
 
    <bean id="postDAO" class="info.blogstack.services.dao.PostDAOImpl" />
    <bean id="labelDAO" class="info.blogstack.services.dao.LabelDAOImpl" />
    <bean id="sourceDAO" class="info.blogstack.services.dao.SourceDAOImpl" />
    <bean id="importSourceDAO" class="info.blogstack.services.dao.ImportSourceDAOImpl" />
    <bean id="indexationDAO" class="info.blogstack.services.dao.IndexationDAOImpl" />
    <bean id="repositoryDAO" class="info.blogstack.services.dao.RepositoryDAOImpl" />    
</beans>