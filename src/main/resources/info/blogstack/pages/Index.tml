<html t:type="layout" t:featured="prop:featured" t:aside1="aside1" t:aside2="aside2" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">

<t:block id="featured">
	<div class="row">
		<div class="col-xs-12 col-md-6">
			<t:postcomponent post="firstPost" mode="home_featured"/>
		</div>
		<div class="col-xs-12 col-md-6">
			<t:data/>
		</div>
	</div>
	<t:loop source="featuredPosts" value="post" index="i">
		<t:if test="open"><t:outputraw value="tags.get('open')"/></t:if>
		<div class="col-xs-12 col-md-6">
			<t:postcomponent post="post" mode="home_featured"/>
		</div>
		<t:if test="close"><t:outputraw value="tags.get('close')"/></t:if>
	</t:loop>
</t:block>
	
<t:if test="firstPage">
	<t:loop source="notFeaturedPosts" value="post">
		<div class="row">
			<div class="col-xs-12 col-md-12">
				<t:postcomponent post="post" mode="home"/>
			</div>
		</div>
	</t:loop>
</t:if>

<t:if test="!firstPage">
	<t:loop source="posts" value="post">
		<div class="row">
			<div class="col-xs-12 col-md-12">
				<t:postcomponent post="post" mode="home"/>
			</div>
		</div>
	</t:loop>
</t:if>

<section class="index-pagination">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-4 col-sm-4 col-md-4">
				<t:if test="!lastPage">
					<a t:type="pagelink" page="index" context="nextContext"><span class="glyphicon glyphicon-arrow-left"></span> Más antiguo</a>
				</t:if>
			</div>	
			<div class="col-xs-4 col-sm-4 col-md-4 col-xs-offset-4 col-sm-offset-4 col-md-offset-4 text-right">
				<t:if test="!firstPage">
					<a t:type="pagelink" page="index" context="previusContext">Más nuevo <span class="glyphicon glyphicon-arrow-right"></span></a>
				</t:if>
			</div>
		</div>
	</div>
</section>

<t:block id="aside1">
</t:block>

<t:block id="aside2">
	<t:lastposts/>
	<t:lastsourceswithposts/>
</t:block>
</html>