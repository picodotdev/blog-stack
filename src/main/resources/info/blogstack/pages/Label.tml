<html t:type="layout" t:title="prop:title" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">

<div class="container-fluid content-ad">
	<div class="row row-ad">
		<div id="adBillboard1" class="col-xs-12 col-sm-12 col-md-12 text-center"></div>
	</div>
</div>

<section>
	<div class="container-fluid content">
		<t:loop source="featuredPosts" value="post">
			<div class="row container">
				<div class="col-xs-12 col-md-12">
					<t:postcomponent post="post" mode="home"/>
					<hr/>
				</div>
			</div>
		</t:loop>
		
		<t:loop source="notFeaturedPosts" value="post">
			<div class="row container">
				<div class="col-xs-12 col-md-12">
					<t:postcomponent post="post" mode="home"/>
					<hr/>
				</div>
			</div>
		</t:loop>
		
		<div class="text-center">
			<a t:type="pagelink" page="archive" context="[]" class="header">Más artículos</a>
			<hr/>
		</div>
	</div>
</section>

<div class="container-fluid content-ad">
	<div class="row row-ad">
		<div id="adBigRectangle1" class="col-xs-12 col-sm-6 col-md-6 text-right"></div>
		<div id="adBigRectangle2" class="col-xs-12 col-sm-6 col-md-6"></div>
	</div>
</div>

</html>